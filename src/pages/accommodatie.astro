---
import { getCollection } from 'astro:content';
console.log('DEBUG: Accessing /accommodatie page');
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/common/Navbar.astro';
import Footer from '../components/common/Footer.astro';
import Features from '../components/home/Features.astro';
import MasonryGallery from '../components/common/MasonryGallery.astro';
import { useTranslations } from '../i18n/ui';

const pages = await getCollection('site');
const page = pages.find(p => p.slug === 'nl/accommodatie');
export const prerender = true;

if (!page) {
    throw new Error('NL Accommodation content not found');
}

const { data } = page;
const currentLang = 'nl';
const t = useTranslations(currentLang);
---

<Layout title={data.title} description={data.description} lang={currentLang}>
  <Navbar forceOpaque={true} />
  <main class="bg-brand-light min-h-screen">
    <!-- Hero Section -->
    <div class="relative h-[60vh] min-h-[500px] overflow-hidden">
        <div class="absolute inset-0">
            <img src="/images/exterior-1.jpg" alt="Accommodatie Hero" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/40"></div>
        </div>
        <div class="absolute inset-0 flex items-center justify-center text-center">
            <div class="max-w-4xl px-4 animate-slide-up">
                <span class="font-['Caveat'] text-4xl md:text-5xl text-brand-accent block mb-4 transform -rotate-2">{t('hero.accommodation.subtitle')}</span>
                <h1 class="text-5xl md:text-7xl font-heading font-black text-white mb-6 drop-shadow-lg">{data.title}</h1>
                <p class="text-xl text-white/90 max-w-2xl mx-auto font-medium leading-relaxed">{data.description}</p>
            </div>
        </div>
        <!-- Scroll Down Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white/80">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </div>
    </div>

    <!-- Intro Text -->
    <section class="py-20 md:py-32 max-w-4xl mx-auto px-4">
        <div class="relative bg-white rounded-3xl p-10 md:p-16 shadow-xl border border-brand-clay/10 text-center overflow-hidden group hover:shadow-2xl transition-all duration-500">
            <!-- Decorative Background Element -->
            <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-brand-green via-brand-accent to-brand-green"></div>
            <div class="absolute -top-24 -right-24 w-48 h-48 bg-brand-light rounded-full opacity-50 blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
            <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-brand-accent/10 rounded-full opacity-50 blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
            
            <span class="font-['Caveat'] text-3xl text-brand-accent block mb-4 transform -rotate-1">Puur genieten</span>
            <h2 class="text-3xl md:text-5xl font-bold text-brand-dark mb-8 font-heading relative z-10">
                Oase van rust dichtbij de kust
            </h2>
            <p class="text-xl text-brand-dark/70 leading-relaxed max-w-2xl mx-auto relative z-10">
                {data.features?.subtitle}
            </p>

            <!-- Decorative Icon -->
            <div class="mt-10 text-brand-green/20 flex justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sun"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
            </div>
        </div>
    </section>

    <!-- Detailed Sections (Zig-Zag) -->
    {data.detailedSections && (
        <section class="space-y-0">
            {data.detailedSections.map((section: any, index: number) => (
                <div class={`flex flex-col md:flex-row ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} bg-white group`}>
                    <div class="md:w-1/2 relative min-h-[400px] overflow-hidden">
                         <img 
                            src={section.image} 
                            alt={section.title} 
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
                         />
                         <div class="absolute inset-0 bg-brand-dark/10 group-hover:bg-transparent transition-colors duration-500"></div>
                    </div>
                    <div class="md:w-1/2 p-12 md:p-20 flex flex-col justify-center bg-brand-light/30">
                        <span class="text-brand-green font-bold tracking-wider text-sm uppercase mb-4 opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">Ontdek</span>
                        <h3 class="text-3xl md:text-4xl font-heading font-bold text-brand-dark mb-6">{section.title}</h3>
                        <p class="text-lg text-brand-dark/70 leading-relaxed">{section.text}</p>
                    </div>
                </div>
            ))}
        </section>
    )}

    <!-- Features Grid -->
    {data.features && (
        <div class="py-24 bg-brand-green/5">
             <Features data={data.features} />
        </div>
    )}

    <!-- Rates Section -->
    {data.rates && (
        <section class="py-24 max-w-5xl mx-auto px-4 sm:px-6">
            <div class="text-center mb-16">
                 <span class="font-['Caveat'] text-4xl text-brand-green block mb-2 transform -rotate-2">Transparant & Eerlijk</span>
                 <h2 class="text-4xl md:text-5xl font-heading font-black text-brand-dark">{data.rates.title}</h2>
                 {data.rates.subtitle && <p class="text-xl text-brand-dark/60 mt-4 max-w-2xl mx-auto">{data.rates.subtitle}</p>}
            </div>

            <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-brand-clay/10 transform hover:shadow-2xl transition-all duration-300">
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-brand-green text-white">
                            <tr>
                                <th class="p-6 text-lg font-heading font-bold">Periode</th>
                                <th class="p-6 text-lg font-heading font-bold hidden md:table-cell">Details</th>
                                <th class="p-6 text-lg font-heading font-bold text-right">Prijs</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-brand-clay/10">
                            {data.rates.prices.map((price: any) => (
                                <tr class="hover:bg-brand-light/50 transition-colors group">
                                    <td class="p-6 font-medium text-brand-dark group-hover:text-brand-green transition-colors">
                                        {price.period}
                                        {price.notes && <span class="block md:hidden text-sm text-brand-dark/50 mt-1 italic">{price.notes}</span>}
                                    </td>
                                    <td class="p-6 text-brand-dark/70 hidden md:table-cell">{price.notes}</td>
                                    <td class="p-6 text-right font-bold text-brand-dark text-lg group-hover:scale-110 transition-transform origin-right">{price.weekPrice}</td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                </div>
                
                <div class="p-8 md:p-12 bg-brand-light/30 grid md:grid-cols-2 gap-12 border-t border-brand-clay/10">
                    <div>
                        <h4 class="font-bold text-brand-dark text-lg mb-6 flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full bg-brand-green"></span>
                            Inclusief
                        </h4>
                        <ul class="space-y-3">
                            {data.rates.includes.map((item: string) => (
                                <li class="flex items-center gap-3 text-brand-dark/70">
                                    <svg class="w-5 h-5 text-brand-green flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                                    {item}
                                </li>
                            ))}
                        </ul>
                    </div>
                    <div>
                         <h4 class="font-bold text-brand-dark text-lg mb-6 flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full bg-brand-accent"></span>
                            Bijkomende kosten
                        </h4>
                        <ul class="space-y-3">
                            {data.rates.additionalCosts.map((cost: any) => (
                                <li class="flex justify-between items-center text-brand-dark/70 border-b border-brand-clay/10 pb-2 last:border-0">
                                    <span>{cost.item}</span>
                                    <span class="font-bold text-brand-dark">{cost.price}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    )}

    {data.gallery && (
      <div class="py-24 max-w-7xl mx-auto px-4">
        <h2 class="text-center text-4xl font-heading font-black text-brand-green mb-16">Een sfeerimpressie</h2>
        <MasonryGallery images={data.gallery} />
      </div>
    )}
  </main>
  <Footer />
</Layout>
