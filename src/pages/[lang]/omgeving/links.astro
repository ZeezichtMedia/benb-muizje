};

const t = translations[currentLang];

const categories = [
    {
        title: t.categories.info.title,
        icon: MapPin,
        color: "bg-blue-50 text-blue-600", 
        links: t.categories.info.links
    },
    {
        title: t.categories.cruises.title,
        icon: Ship,
        color: "bg-teal-50 text-teal-600",
        links: t.categories.cruises.links
    },
    {
        title: t.categories.watersports.title,
        icon: Waves,
        color: "bg-cyan-50 text-cyan-600",
        links: t.categories.watersports.links
    },
    {
        title: t.categories.rain.title,
        icon: Umbrella,
        color: "bg-indigo-50 text-indigo-600",
        description: t.categories.rain.description,
        links: t.categories.rain.links
    }
];
---

<Layout title={`${t.title} - Zeeuwse Buurn`} description={t.metaDescription} lang={currentLang}>
  <Navbar />
  <main class="pt-24 md:pt-36 bg-brand-light min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        
        <!-- Header -->
        <div class="text-center max-w-3xl mx-auto mb-16 animate-slide-up">
            <span class="font-['Caveat'] text-4xl text-brand-green block mb-4">{t.subtitle}</span>
            <h1 class="text-4xl md:text-5xl font-heading font-black text-brand-dark mb-6">{t.title}</h1>
            <p class="text-lg text-brand-dark/70 font-medium">
                {t.intro}
            </p>
        </div>

        <!-- Links Grid -->
        <div class="grid md:grid-cols-2 gap-8 masonry-grid">
            {categories.map((category, index) => (
                <div class={`bg-white rounded-3xl p-8 shadow-xl border border-brand-clay/10 hover:shadow-2xl transition-all duration-300 animate-slide-up h-full flex flex-col`} style={`animation-delay: ${index * 100}ms`}>
                    <div class="flex items-center gap-4 mb-8">
                        <div class={`w-14 h-14 rounded-2xl flex items-center justify-center ${category.color}`}>
                            <category.icon size={28} />
                        </div>
                        <h2 class="text-2xl font-bold font-heading text-brand-dark">{category.title}</h2>
                    </div>
                    
                    {category.description && (
                        <p class="text-brand-dark/60 mb-6 italic border-l-4 border-brand-green/20 pl-4">
                            {category.description}
                        </p>
                    )}

                    <div class="grid gap-3">
                        {category.links.map((link) => (
                            <a 
                                href={link.url} 
                                target="_blank" 
                                rel="noopener noreferrer"
                                class="flex items-center justify-between p-4 rounded-xl bg-brand-light/30 hover:bg-brand-green/5 border border-transparent hover:border-brand-green/20 transition-all group"
                            >
                                <span class="font-medium text-brand-dark group-hover:text-brand-green transition-colors">{link.name}</span>
                                <ExternalLink size={18} class="text-brand-dark/40 group-hover:text-brand-green transition-colors" />
                            </a>
                        ))}
                    </div>
                </div>
            ))}
        </div>
        
    </div>
  </main>
  <Footer />
</Layout>
