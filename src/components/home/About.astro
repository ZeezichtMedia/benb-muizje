---
interface Props {
  data: {
    title: string;
    text: string[];
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative bg-brand-light rounded-[3rem] p-8 md:p-16">
      <!-- Decorative Elements -->
      <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-brand-clay/30 rounded-full blur-3xl opacity-50"></div>
      <div class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-brand-green/10 rounded-full blur-3xl opacity-50"></div>

      <div class="relative z-10 max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-5xl font-heading font-black text-brand-green mb-8">{data.title}</h2>
        <div class="space-y-6 text-lg text-brand-dark/80 leading-relaxed font-medium">
          {data.text.map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
         <div class="absolute inset-0 bg-mint-500/10 mix-blend-multiply"></div>
      </div>
    </div>
  </div>
</section>
