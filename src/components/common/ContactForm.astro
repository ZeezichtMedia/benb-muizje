---
import Button from './Button.astro';
---

<div class="bg-white p-8 rounded-2xl shadow-lg border border-sand-100">
  <h2 class="text-2xl font-bold font-heading text-slate-800 mb-6">Stuur ons een bericht</h2>
  <form class="space-y-6" name="contact" method="POST" data-netlify="true">
    <div>
      <label for="name" class="block text-sm font-medium text-slate-700">Naam</label>
      <input type="text" name="name" id="name" required class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50" />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-slate-700">Email</label>
      <input type="email" name="email" id="email" required class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50" />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-slate-700">Bericht</label>
      <textarea name="message" id="message" rows="4" required class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50"></textarea>
    </div>

    <Button variant="primary" class="w-full justify-center">
      Verstuur
    </Button>
  </form>
</div>
