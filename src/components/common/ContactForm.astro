---
import Button from "./Button.astro";
---

<div class="bg-white p-8 rounded-2xl shadow-lg border border-sand-100">
  <h2 class="text-2xl font-bold font-heading text-slate-800 mb-6">
    Stuur ons een bericht
  </h2>
  <form class="space-y-6" id="contact-form">
    <div>
      <label for="name" class="block text-sm font-medium text-slate-700"
        >Naam</label
      >
      <input
        type="text"
        name="name"
        id="name"
        required
        class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-slate-700"
        >Email</label
      >
      <input
        type="email"
        name="email"
        id="email"
        required
        class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-slate-700"
        >Bericht</label
      >
      <textarea
        name="message"
        id="message"
        rows="4"
        required
        class="mt-1 block w-full rounded-md border-sand-300 shadow-sm focus:border-mint-500 focus:ring-mint-500 py-3 px-4 bg-sand-50"
      ></textarea>
    </div>

    <Button type="submit" variant="primary" class="w-full justify-center">
      Verstuur
    </Button>
    <div id="form-message" class="hidden rounded-md p-4 mb-4"></div>
  </form>
</div>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const messageDiv = document.getElementById("form-message");

  if (form && messageDiv) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      const submitBtn = form.querySelector("button");

      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = "Versturen...";
      }

      try {
        const response = await fetch("/api/contact", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          form.reset();
          messageDiv.textContent = "Bedankt! We hebben je bericht ontvangen.";
          messageDiv.className =
            "rounded-md p-4 mb-4 bg-green-100 text-green-700";
          messageDiv.classList.remove("hidden");
        } else {
          throw new Error("Failed to send");
        }
      } catch (error) {
        console.error(error);
        messageDiv.textContent = "Er ging iets mis. Probeer het later opnieuw.";
        messageDiv.className = "rounded-md p-4 mb-4 bg-red-100 text-red-700";
        messageDiv.classList.remove("hidden");
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = "Verstuur";
        }
      }
    });
  }
</script>
